<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatWindow">

    <ListView
        android:id="@+id/listViewChat"
        android:layout_width="616dp"
        android:layout_height="541dp"
        android:layout_above="@id/sendButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="346dp"
        android:layout_marginBottom="11dp"></ListView>

    <EditText
        android:id="@+id/typeChatEditText"
        android:layout_width="461dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@id/sendButton"></EditText>

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="349dp"
        android:layout_marginRight="343dp"
        android:layout_marginBottom="7dp"
        android:layout_toLeftOf="@id/frameLayout"
        android:text="@string/sendButtonText"></Button>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="603dp"
        android:layout_above="@+id/sendButton"
        android:layout_alignRight="@id/listViewChat"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="956dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="-296dp"
        android:layout_marginBottom="-49dp"></FrameLayout>
</RelativeLayout>

